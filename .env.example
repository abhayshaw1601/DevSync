# MongoDB Connection
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/devsync?retryWrites=true&w=majority

# Pusher Server-side Credentials
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# Pusher Client-side Credentials (must have NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_pusher_cluster

# JWT Secret (generate a random string)
JWT_SECRET=your_random_secret_key_here

# GitHub OAuth (optional - for authentication)
GITHUB_ID=your_github_client_id
GITHUB_SECRET=your_github_client_secret
